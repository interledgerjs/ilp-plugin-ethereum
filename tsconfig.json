{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./build",
    "target": "es2017",
    "module": "commonjs",
    "sourceMap": true,
    "inlineSources": true,
    "declaration": true,
    "noImplicitAny": true,
    "removeComments": true,
    "moduleResolution": "node",
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "alwaysStrict": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/__tests__/**/*",
    "**/*.test.ts",
    "**/*.spec.ts",
  ]
}
