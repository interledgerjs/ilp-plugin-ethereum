{
  "compilerOptions": {
    "outDir": "build",
    "target": "es6",
    "lib": ["es2015", "es2017"],
    "module": "commonjs",
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": true,
    "removeComments": true,
    "moduleResolution": "node",
    "inlineSources": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true
  },
  "compileOnSave": true
}
