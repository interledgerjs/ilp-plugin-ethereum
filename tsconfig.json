{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./build",
    "target": "es2017",
    "module": "commonjs",
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": true,
    "removeComments": true,
    "moduleResolution": "node",
    "inlineSources": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "alwaysStrict": true
  },
  "compileOnSave": true
}
