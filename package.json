{
  "name": "ilp-plugin-ethereum-asym-server",
  "version": "1.2.2",
  "description": "Asymmetric Ethereum paychan server for ILP using Machinomy",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "scripts": {
    "build": "tsc --project .",
    "build-watch": "tsc --watch --project .",
    "lint": "npm run tslint && npm run eslint",
    "tslint": "tslint --project .",
    "eslint": "eslint test",
    "postinstall": "npm run build",
    "test": "jest --detectOpenHandles",
    "test-watch": "jest --watch --detectOpenHandles --verbose false"
  },
  "license": "ISC",
  "dependencies": {
    "@machinomy/contracts": "4.1.1",
    "@types/web3": "^1.0.3",
    "bignumber.js": "^7.2.1",
    "btp-packet": "^1.2.1",
    "ganache-cli": "^6.1.8",
    "ilp-logger": "^1.0.2",
    "ilp-packet": "^3.0.0",
    "ilp-plugin-btp": "github:kincaidoneil/ilp-plugin-btp",
    "ilp-plugin-mini-accounts": "github:strata-labs/ilp-plugin-mini-accounts",
    "ilp-protocol-stream": "github:interledgerjs/ilp-protocol-stream#ko-receive-only",
    "web3": "^1.0.0-beta.36"
  },
  "devDependencies": {
    "@types/jest": "^23.3.2",
    "@types/request": "^2.47.1",
    "babel-preset-env": "^1.7.0",
    "eslint": "^5.5.0",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-promise": "^3.8.0",
    "eslint-plugin-standard": "^3.1.0",
    "get-port": "^4.0.0",
    "jest": "^23.4.2",
    "source-map-support": "^0.5.9",
    "standard": "^11.0.1",
    "ts-jest": "^23.1.4",
    "tslint": "^5.11.0",
    "tslint-config-standard": "^7.1.0",
    "typescript": "^3.0.3"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "useBabelrc": true
      }
    },
    "testEnvironment": "node",
    "transform": {
      "^.+\\.tsx?$": "ts-jest",
      "^.+\\.js$": "babel-jest"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!(ilp-plugin-btp|ilp-plugin-mini-accounts))"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
